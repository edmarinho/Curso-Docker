docker container run -d -p 80:80 nginx

docker container inspect --format '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' CONTAINER_ID

docker container rm -f 

docker network ls

docker network create --driver=bridge --subnet=192.168.0.0/24 nginx_n
-d bridge
--driver=bridge
--gateway
--ip-range

docker container run --network=nginx_n -d -p 80:80 nginx

docker container ls

docker container inspect --format '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' CONTAINER_ID

docker network create --driver=bridge --subnet=10.0.0.0/8 nginx_2

docker network connect nginx_2 CONTAINER_ID

docker network inspect

docker network rm nginx_2
